# Frontend Environment Variables
# Copy this file to .env and fill in your actual values

# Development/Production Mode
VITE_NODE_ENV=development

# API Base URL (for frontend to connect to backend)
# In development, this should point to your local backend
# In production, this will be the same domain
VITE_API_BASE_URL=http://localhost:3001

# Optional: Google Analytics (if you want to track usage)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Optional: Sentry for error tracking
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Optional: Feature flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DATA_COLLECTION=true